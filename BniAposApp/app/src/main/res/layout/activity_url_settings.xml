<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    tools:context=".activities.ui.SettingsActivity">

    <include
        android:id="@+id/custom_header"
        layout="@layout/custom_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom_layout"
        android:layout_below="@+id/custom_header">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_bp_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@android:color/transparent"
                android:hint="@string/bp_url"
                app:boxBackgroundColor="@color/blue_200"
                app:hintTextColor="#4F5053">

                <EditText
                    android:id="@+id/et_bp_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cp_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@android:color/transparent"
                android:hint="@string/cp_url"
                app:boxBackgroundColor="@color/blue_200"
                app:hintTextColor="#4F5053">

                <EditText
                    android:id="@+id/et_cp_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_init_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@android:color/transparent"
                android:hint="@string/init_url"
                app:boxBackgroundColor="@color/blue_200"
                app:hintTextColor="#4F5053">

                <EditText
                    android:id="@+id/et_init_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/dimen_15dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:paddingLeft="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/close"
            android:textColor="@color/white" />


    </LinearLayout>
</RelativeLayout>